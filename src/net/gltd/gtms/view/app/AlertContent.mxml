<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Declarations>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import flashx.textLayout.elements.TextFlow;
			
			[Bindable]
			public		var	message		:String;
			[Bindable]
			public		var	tf			:TextFlow;
			
		
		]]>
	</fx:Script>
	<s:Group  top="0" left="0" right="0" bottom="0" id="_content">
		<s:TextArea id="_text" paddingBottom="10" paddingTop="10" paddingLeft="10" paddingRight="10" textAlign="center" verticalAlign="middle" selectable="false"
					borderVisible="false" editable="false" text="{message}" width="100%" height="100%" contentBackgroundAlpha="0" includeInLayout="{message!=null || tf != null}"
					textFlow="{tf}"
					>
		</s:TextArea>
	</s:Group>
	
</s:Group>
